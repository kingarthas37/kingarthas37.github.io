%wrap {
  width: 980px;
  margin: auto;
  @include clearfix;
}

body {
  font-size: 12px;
  color: #888;
}

a {
  color: #666;
  &:hover {
    color: $red;
  }
}

ul,li {
  margin: 0;
  padding: 0;
  border: none;
}

li {
  list-style: none;
}

h3,h4 {
  font-size: 12px;
  font-weight: normal;
  margin: 0;
  padding: 0;
}

form {
  margin:0;
}

.topbar {
  background: #f7f7f7;
  height: 30px;
  line-height: 30px;
  border-bottom: 1px solid #eee;
  text-align: right;
  .wrap {
    @extend %wrap;
  }
  i {
    border-right: 1px solid #ddd;
    margin: 0 6px;
  }
}

.container {
  @extend  %wrap;
}

.header {
  
  @include clearfix;
  
  .wrap {
    padding-top: 15px;
    height: 85px;
  }
  
  .logo {
    width: 270px;
    height: 60px;
    float: left;
    background: url('../images/logo.png') no-repeat;
    display: block;
  }
  
  .search {
    margin-left: 60px;
    margin-top: 10px;
    float: left;
  }
  
  .search-box {
    height: 30px;
    border: 3px solid $red;
    margin-bottom: 5px;
    float: left;
    @include clearfix;
    input {
      float: left;
      height: 30px;
      line-height: 30px;
      padding: 0;
      margin: 0;
      border: 0;
      
    }
    .text {
      width: 350px;
      padding: 0 10px;
      &:focus {
        outline: none;
        box-shadow: none;
      }
    }
    .button {
      width: 80px;
      background: $red;
      color: #fff;
    }
  }
  
  .hot-words {
    clear: both;
    a {
      margin: 0 4px;
      strong {
        color: $red;
        font-weight: normal;
      }
    }
  }
  
  .menu {
    
    @include clearfix;
    @include gradient(#E64346,#E13335);
    
    height: 40px;

    .nav {
      float: left;
      line-height: 40px;
      margin: 0;
      a {
        color: #fff;
        font-size: 14px;
        @include inlineBlock;
        padding: 0 30px;
        &:hover {
          background: #a40000;
          text-decoration: none;
        }
      }
    }
    
  }
  
  .category {
    
    float: left;
    width: 200px;
    background: #cd2a2c;
    position: relative;
    
    h3 {
      height: 40px;
      line-height: 40px;
      margin: 0;
      position: relative;
      a {
        font-size: 14px;
        color: #fff;
        font-weight: bold;
        display: block;
        padding-left: 20px;
        i {
          position: absolute;
          top:14px;
          right: 10px;
          width: 12px;
          height: 12px;
          background: url('../images/ico-menu-arrow-down.png');
        }
        
      }
      
    }
    
    
    ul.layer {

      display: none;
      width: 196px;
      border: 2px solid $red;
      border-top: none;
      background: #fafafa;
      position: absolute;
      
      li {
        height: 30px;
        position: relative;
        
        h4 {
          line-height: 30px;
          padding-left: 10px;
        }
        
        h4.hover {
          display: none;
          position: absolute;
          height: 28px;
          line-height: 28px;
          top:0;
          left:0;
          border-top: 1px solid #ddd;
          border-bottom: 1px solid #ddd;
          width: 180px;
          z-index: 2;
          background: #fff;
        }

        div.layer {
          display: none;
          position: absolute;
          z-index: 1;
          width:400px;
          padding: 10px 15px;
          border: 1px solid #ddd;
          background: #fff;
          top: 0px;
          left: 189px;
           
          
          p {
            border-bottom: 1px solid #ddd;
            margin-bottom: 8px;
            padding-bottom: 4px;
            line-height: 24px;
            strong {
              color: $red;
              font-weight: normal;
            }
            i {
              border-left: 1px solid #eee;
              margin: 0 8px;
            }
            &:last-child {
              border: none;
              margin-bottom: 0;
              padding-bottom: 0;
            }
          }
        }
        
        &:hover {
          .hover {
            display: block;
          }
         
          div.layer {
            display: block;
          }
        }
      }
      
    }
    
    
    
    
    &:hover {
      ul.layer {
        display: block;
      }
      h3 {
        i {
          background: url('../images/ico-menu-arrow-up.png');
        }
      }
    }
  }
  

}

.pager {
  
  text-align: right;
  
  .page-info {
    vertical-align: middle;
    @include inlineBlock;
  }

  span,a,.text,.btn {
    font-size: 12px;
    @include inlineBlock;
    vertical-align: middle;
    height: 26px;
    line-height: 26px;
    padding: 0 10px;
    border: 1px solid #ccc;
    background: #fff;
    text-align: center;
    border-radius: 0;
  }

  a {
    color:#666;
    &.cur {
      font-weight: bold;
      color:$red;
    }
  }

  em {
    color:#323232;
    margin: 0 4px;
    font-style: normal;
  }

  .page-direct {
    vertical-align: middle;
    @include inlineBlock;
  }

  .input-group {
    .text {
      margin: 0;
      width: 30px;
    }
    .btn {
      border:none;
      background: $red;
      color: #fff;
      text-shadow: none;
    }
  }

}


.footer {
  border-top: 1px solid #ddd;
  padding:20px 0;
  color: #999;
  text-align: center;
  a {
    
  }
  i {
    border-right: 1px solid #ddd;
    margin: 0 10px;
  }
}